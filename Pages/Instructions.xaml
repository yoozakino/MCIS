<Page x:Class="Информационная_система_медицинской_клиники.Pages.Instructions"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:local="clr-namespace:Информационная_система_медицинской_клиники.Pages"
      mc:Ignorable="d"
      Title="Patients" Height="1080" Width="1920"
      Loaded="Page_Loaded">
    
    <StackPanel>
        <DataGrid x:Name="InstructionsGrid" Margin="10" AutoGenerateColumns="False" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Номер назначения" FontFamily="PlumbBoldC" FontSize="15" Width="auto" Binding="{Binding PrescriptionID}"/>
                <DataGridTextColumn Header="Номер медицинской карты" FontFamily="PlumbBoldC" FontSize="15" Width="auto" Binding="{Binding RecordID}"/>
                <DataGridTextColumn Header="Лекарство" FontFamily="PlumbBoldC" FontSize="15" Width="auto" Binding="{Binding MedicationName}"/>
                <DataGridTextColumn Header="Инструкция по применению" FontFamily="PlumbBoldC" FontSize="15" Width="*" Binding="{Binding DosageInstructions}"/>
            </DataGrid.Columns>
        </DataGrid>
    </StackPanel>
</Page>