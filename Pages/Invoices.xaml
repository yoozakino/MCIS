<Page x:Class="Информационная_система_медицинской_клиники.Pages.Invoices"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:local="clr-namespace:Информационная_система_медицинской_клиники.Pages"
      mc:Ignorable="d"
      Title="Patients" Height="1080" Width="1920"
      Loaded="Page_Loaded">
    
    <StackPanel>
        <DataGrid x:Name="InvoicesGrid" Margin="10" AutoGenerateColumns="False" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Номер счета" FontFamily="PlumbBoldC" FontSize="15" Width="auto" Binding="{Binding InvoiceID}"/>
                <DataGridTextColumn Header="ФИО пациента" FontFamily="PlumbBoldC" FontSize="15" Width="auto" Binding="{Binding PatientName}"/>
                <DataGridTextColumn Header="Услуга" FontFamily="PlumbBoldC" FontSize="15" Width="auto" Binding="{Binding ServiceName}"/>
                <DataGridTextColumn Header="Дата счета" FontFamily="PlumbBoldC" FontSize="15" Width="auto" Binding="{Binding InvoiceDate}"/>
                <DataGridTextColumn Header="Сумма" FontFamily="PlumbBoldC" FontSize="15" Width="auto" Binding="{Binding Amount}"/>
                <DataGridTextColumn Header="Статус" FontFamily="PlumbBoldC" FontSize="15" Width="*" Binding="{Binding Statuss}"/>
            </DataGrid.Columns>
        </DataGrid>
    </StackPanel>
</Page>