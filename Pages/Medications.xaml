<Page x:Class="Информационная_система_медицинской_клиники.Pages.Medications"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:local="clr-namespace:Информационная_система_медицинской_клиники.Pages"
      mc:Ignorable="d"
      Title="Patients" Height="1080" Width="1920"
      Loaded="Page_Loaded">
    
    <StackPanel>
        <DataGrid x:Name="MedicationsGrid" Margin="10" AutoGenerateColumns="False" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Наименование" FontFamily="PlumbBoldC" FontSize="15" Width="auto" Binding="{Binding MedicationName}"/>
                <DataGridTextColumn Header="Описание" FontFamily="PlumbBoldC" FontSize="15" Width="auto" Binding="{Binding Descriptionn}"/>
                <DataGridTextColumn Header="Дозировка" FontFamily="PlumbBoldC" FontSize="15" Width="auto" Binding="{Binding Dosage}"/>
                <DataGridTextColumn Header="Стоимость" FontFamily="PlumbBoldC" FontSize="15" Width="*" Binding="{Binding Price}"/>
            </DataGrid.Columns>
        </DataGrid>
    </StackPanel>
</Page>