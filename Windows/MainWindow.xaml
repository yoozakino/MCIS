<Window x:Class="Информационная_система_медицинской_клиники.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Информационная_система_медицинской_клиники"
        mc:Ignorable="d"
        Title="ИСМК" Height="600" Width="800" ResizeMode="NoResize" 
        KeyDown="Window_KeyDown"
        WindowStartupLocation="CenterScreen"
        Style="{StaticResource MainWindowStyle}">
    <Grid>
        <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden" Margin="10"/>
        <StackPanel Height="300" Width="300" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,180,0,0">
            <Button Style="{StaticResource RoundedButtonStyle}" Name="Sign_up_btn" Content="Войти" Click="Sign_up_btn_Click"/>
            <Button Style="{StaticResource RoundedButtonStyle}" Name="register_btn" Content="Зарегистрироваться"/>
            <Button Style="{StaticResource RoundedButtonStyle}" Name="exit_btn" Content="Выйти из системы" Click="exit_btn_Click"/>
        </StackPanel>
        <TextBlock Style="{StaticResource WelcomeTextStyle}" Text="Добро пожаловать в Информационную систему медицинской клиники (ИСМК). Для продолжения работы войдите в систему используя кнопку ниже."/>
    </Grid>
</Window>