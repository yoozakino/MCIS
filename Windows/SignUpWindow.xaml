<Window x:Class="Информационная_система_медицинской_клиники.Windows.SignUpWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Информационная_система_медицинской_клиники"
        mc:Ignorable="d"
        Title="Вход в учетную запись" Height="300" Width="330" ResizeMode="NoResize"
        KeyDown="Window_KeyDown"
        WindowStartupLocation="CenterScreen"
        Style="{StaticResource SignUpWindowStyle}">
    <Grid>
        <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden" Margin="10"/>
        <StackPanel Height="250" Width="250">
            <Label Content="Логин" Style="{StaticResource LabelStyle}"/>
            <TextBox x:Name="login" Text="" Height="30" FontFamily="PlumbBoldC" FontSize="25"/>
            <Label Content="Пароль" Style="{StaticResource LabelStyle}"/>
            <PasswordBox Style="{StaticResource PasswordBoxStyle1}" x:Name="password" Height="30" FontFamily="PlumbBoldC" FontSize="25"/>
            <Button x:Name="enter" Style="{StaticResource RoundedButtonStyle}" Content="Вход" HorizontalAlignment="Center" FontFamily="PlumbBoldC" FontSize="17" Margin="30" Width="145" Height="45" Background="Gold" Click="Button_Click"/>
        </StackPanel>
    </Grid>
</Window>